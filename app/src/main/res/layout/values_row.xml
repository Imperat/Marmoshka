<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable name="val1" type="Integer"/>
        <variable name="val2" type="Integer"/>
        <variable name="val3" type="Integer"/>
        <variable name="val4" type="Integer"/>
        <variable name="val5" type="Integer"/>
        <variable name="val6" type="Integer"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button1"
                android:textSize="10sp"
                app:setNumberOrEmpty="@{val1}"
                android:layout_width="48dp"
                android:background="@drawable/value_button"
                android:layout_height="48dp"
                android:layout_margin="4dp"
                android:textColor="@color/black" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button2"
                android:textSize="10sp"
                android:background="@drawable/value_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="4dp"
                android:textColor="@color/black"
                app:setNumberOrEmpty="@{val2}" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button3"
                android:textSize="10sp"
                android:background="@drawable/value_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="4dp"
                android:textColor="@color/black"
                app:setNumberOrEmpty="@{val3}" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button4"
                android:textSize="10sp"
                android:background="@drawable/value_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="4dp"
                android:textColor="@color/black"
                app:setNumberOrEmpty="@{val4}" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button5"
                android:textSize="10sp"
                android:background="@drawable/value_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="4dp"
                android:textColor="@color/black"
                app:setNumberOrEmpty="@{val5}" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button6"
                android:textSize="10sp"
                android:background="@drawable/value_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="4dp"
                android:textColor="@color/black"
                app:setNumberOrEmpty="@{val6}" />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
